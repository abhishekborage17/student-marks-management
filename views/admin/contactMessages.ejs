<%- include('../partials/header', { title: 'Contact Messages' }) %>

    <style>
        .table-responsive {
            width: 100%;
        }

        table.table {
            width: 100%;
            table-layout: auto;
            /* or fixed based on your needs */
        }

        .contact-title {
            display: flex;
            align-items: center;
            gap: 12px;
            font-size: 2rem;
            font-weight: 600;
            color: #343a40;
        }

        .contact-title i {
            font-size: 2.2rem;
            color: #0d6efd;
        }

        .table th,
        .table td {
            vertical-align: middle;
            text-align: center;
            white-space: normal;
            word-wrap: break-word;
        }

        .table td:nth-child(3) {
            max-width: 400px;
        }
    </style>


    <div class="container-fluid py-5 px-4">
        <div class="contact-title mb-4">
            <i class="bi bi-chat-left-text-fill"></i>
            <span>Contact Form Submissions</span>
        </div>

        <% if (messages.length> 0) { %>
            <div class="table-responsive shadow-sm rounded border">
                <table class="table table-hover table-striped align-middle">
                    <thead class="table-primary">
                        <tr>
                            <th>üë§ Name</th>
                            <th>üìß Email</th>
                            <th>üí¨ Message</th>
                            <th>üïí Submitted At</th>
                            <th>üóëÔ∏è Action</th> <!-- New column -->
                        </tr>
                    </thead>
                    <tbody>
                        <% messages.forEach(msg=> { %>
                            <tr>
                                <td>
                                    <%= msg.name %>
                                </td>
                                <td>
                                    <%= msg.email %>
                                </td>
                                <td>
                                    <%= msg.message %>
                                </td>
                                <td>
                                    <%= msg.createdAt ? msg.createdAt.toLocaleString() : 'N/A' %>
                                </td>
                                <td>
                                    <form action="/admin/contact-messages/<%= msg._id %>?_method=DELETE" method="POST"
                                        onsubmit="return confirm('Are you sure you want to delete this message?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Delete">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>


                </table>
            </div>
            <% } else { %>
                <div class="alert alert-info mt-4" role="alert">
                    No contact messages found. üì≠
                </div>
                <% } %>
    </div>

    <%- include('../partials/footer') %>