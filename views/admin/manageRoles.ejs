<%- include('../partials/header', { title: 'Manage Roles', userId: session.userId }) %>
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


<style>
  .role-table-wrapper {
    background: #ffffff;
    border-radius: 1rem;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
  }

  .table th,
  .table td {
    vertical-align: middle;
  }

  .table thead th {
    background-color: #f1f3f5;
    font-weight: 600;
    color: #495057;
  }

  .form-select {
    min-width: 150px;
  }

  .btn-update {
    border-radius: 50px;
    font-weight: 500;
  }

  .table-hover tbody tr:hover {
    background-color: #f8f9fa;
  }

  h2.page-title {
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: #212529;
  }
</style>

<div class="container py-5">
  <div class="role-table-wrapper">
    <h2 class="page-title"><i class="bi bi-person-lock me-2"></i>Manage User Roles</h2>

    <table class="table table-hover table-bordered align-middle">
      <thead>
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Current Role</th>
          <th>Change Role</th>
        </tr>
      </thead>
      <tbody>
        <% users.forEach(user => { %>
          <tr>
            <td><strong><%= user.name %></strong></td>
            <td><%= user.email %></td>
            <td><span class="badge bg-secondary text-capitalize"><%= user.role %></span></td>
            <td>
              <form action="/admin/roles/update/<%= user._id %>" method="POST" class="d-flex gap-2 align-items-center">
                <select name="role" class="form-select form-select-sm">
                  <option value="student" <%= user.role === 'student' ? 'selected' : '' %>>Student</option>
                  <option value="teacher" <%= user.role === 'teacher' ? 'selected' : '' %>>Teacher</option>
                  <option value="admin" <%= user.role === 'admin' ? 'selected' : '' %>>Admin</option>
                </select>
                <button class="btn btn-sm btn-outline-primary btn-update">
                  <i class="bi bi-check2-circle"></i> Update
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<%- include('../partials/footer') %>
